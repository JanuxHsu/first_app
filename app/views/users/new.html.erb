<h1>Sign Up</h1>

<div class="row">
	<%= form_for @user do |f| %>
		<%= f.label :name %></br>
		<%= f.text_field :name %></br>

		<%= f.label :email %></br>
		<%= f.text_field :email %></br>

		<%= f.label :password %></br>
		<%= f.text_field :password %></br>
		
		<%= f.label :password_confirmation %></br>
		<%= f.text_field :password_confirmation %></br></br></br>
		
		<div>
			<%= f.submit "Register!", class: "btn btn-primary" %>
		</div>
	<% end %>
</div>